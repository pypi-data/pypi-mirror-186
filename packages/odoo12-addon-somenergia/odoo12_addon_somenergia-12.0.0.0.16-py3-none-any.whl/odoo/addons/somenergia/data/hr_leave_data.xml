<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Make hr_leave attachments invisible for users (only admins) -->
        <record id="hr_leave_attachment_manager_rule" model="ir.rule">
            <field name="name">HR Leave Attachment Manager</field>
            <field name="model_id" ref="base.model_ir_attachment"/>
            <field name="groups" eval="[(6,0, [ref('hr.group_hr_manager')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force"></field>
        </record>
        <record id="hr_leave_attachment_own_employee_rule" model="ir.rule">
            <field name="name">HR Leave Attachment User</field>
            <field name="model_id" ref="base.model_ir_attachment"/>
            <field name="groups" eval="[(6,0, [ref('hr.group_hr_user')])]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="domain_force">['|', ('res_model','!=','hr.leave'), ('create_uid','=',user.id)]</field>
        </record>
    </data>
</odoo>
