#!/usr/bin/env sh
# automatically generated by auxilium

set -eE

DATA_FILE="devops/cache/coverage/data_file"

if [ -f $DATA_FILE ]
then
    mv -n $DATA_FILE .coverage
fi

pytest --cov="`awk '/name: /' auxilium.yml | awk '{print $2}'`" --cov-report=html:"devops/cache/coverage"
mv .coverage $DATA_FILE

if [ "$1" != "" ]
then
    open "devops/cache/coverage/index.html"
fi
