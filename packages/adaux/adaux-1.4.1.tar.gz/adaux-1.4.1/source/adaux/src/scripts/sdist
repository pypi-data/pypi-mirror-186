#!/usr/bin/env sh
# automatically generated by auxilium

set -eE

TRG=setup.cfg
ORIG=setup-original.cfg
DIST=devops/package/setup-dist.cfg

mv $TRG $ORIG
cp $DIST $TRG
rm -rf source/*.egg-info *.egg-info dist
python setup.py sdist
rm $TRG
mv $ORIG $TRG
python setup.py egg_info

if [ "$1" != "" ]
then
    tar -zxf dist/* -C dist
    rm dist/*.tar.gz
fi
