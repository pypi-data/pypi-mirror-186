<h2 i18n:domain="waeup.kofa" tal:condition="context/translated_state">
  ...
  <span tal:replace="context/translated_state">APPLICATIONSTATE
  </span>
  <span tal:omit-tag=""
    i18n:translate="" tal:condition="context/suspended">(account suspended)
  </span>
  ...
</h2>

<div class="workflow" tal:condition="context/history">
  <div tal:repeat="msg context/history/messages">
    <span tal:replace="msg">MESSAGE</span><br />
  </div>
</div>

<img tal:condition="python: context.__parent__.with_picture"
     src="" height="180px" tal:attributes="src view/passport_url" />

<table i18n:domain="waeup.kofa" class="form-table">
  <tbody>
    <tal:files condition="view/file_links">
      <tr>
        <td class="separator" colspan=2>
          Files
        </td>
      </tr>
      <tr>
        <td colspan=2>
          <span tal:replace="structure view/file_links" />
        </td>
      </tr>
    </tal:files>
    <tal:widgets content="structure provider:widgets" />
    <tr tal:condition="view/getCourseAdmitted">
      <td class="fieldname" i18n:translate="">
          Admitted Course of Study:
      </td>
      <td>
        <span tal:replace="structure view/getCourseAdmitted" />
      </td>
    </tr>
    <tr>
      <td class="fieldname" i18n:translate="">
          Password:
      </td>
      <td>
          <tal:password replace="view/hasPassword" />
      </td>
    </tr>
  </tbody>
</table>

<tal:refereereports condition="view/display_refereereports">
  <br /><br />
  <h3 i18n:translate="">
      Referee Reports
  </h3>
  <table i18n:domain="waeup.kofa" class="table table-condensed">
    <thead>
    <tr>
      <th i18n:translate="">Report Id</th>
      <th i18n:translate="">Creation Date</th>
      <th i18n:translate="">Referee</th>
      <th i18n:translate="">Email Address</th>
    </tr>
    </thead>
    <tbody>
      <tr tal:repeat="cl context/refereereports">
        <td tal:condition="not: layout/isApplicant"> <a tal:attributes="href python:view.url(cl)">
          <span tal:content="cl/r_id">RID</span></a></td>
        <td tal:condition="layout/isApplicant"><span tal:content="cl/r_id">RID</span></td>
        <td tal:content="python: layout.formatDatetime(cl.creation_date)">CREATION DATE</td>
        <td tal:content="cl/name">REFEREE</td>
        <td tal:content="cl/email">EMAIL</td>
      </tr>
    </tbody>
  </table>
</tal:refereereports>

<tal:payments condition="view/display_payments">
  <h3 i18n:domain="waeup.kofa" i18n:translate="">
      Payment Tickets
  </h3>
  <table i18n:domain="waeup.kofa" class="table table-condensed">
    <thead>
      <tr>
        <th i18n:translate="">Payment Id</th>
        <th i18n:translate="">Creation Date</th>
        <th i18n:translate="">Payment Date</th>
        <th i18n:translate="">Category</th>
        <th i18n:translate="">Item</th>
        <th i18n:translate="">State</th>
      </tr>
    </thead>
    <tbody>
      <tr tal:repeat="value context/payments">
        <td> <a tal:attributes="href python:view.url(value)">
        <span tal:content="value/p_id">PID</span></a></td>
        <td tal:content="python: layout.formatDatetime(value.creation_date)">CREATION DATE</td>
        <td tal:content="python: layout.formatDatetime(value.payment_date)">PAYMENT DATE</td>
        <td tal:content ="value/category">CATEGORY</td>
        <td tal:content ="value/display_item">ITEM</td>
        <td tal:content ="value/p_state_title">STATE</td>
      </tr>
    </tbody>
  </table>
</tal:payments>
